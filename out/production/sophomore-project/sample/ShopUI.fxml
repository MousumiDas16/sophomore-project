    <children>
        <AnchorPane layoutX="142.0" prefHeight="400.0" prefWidth="630.0" style="-fx-border-color: black;">
            <children>
                <Button fx:id="btnFood" layoutX="20.0" layoutY="15.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Food ($10)" />
                <Button fx:id="btnMed" layoutX="150.0" layoutY="15.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Medicine ($30)" />
                <Button fx:id="btnPotion" layoutX="20.0" layoutY="110.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Potion ($50)" />
                <Button fx:id="btnJewellery" layoutX="150.0" layoutY="110.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Jewellery ($60)" />
                <Button fx:id="btnSword" layoutX="280.0" layoutY="110.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Sword ($20)" />
                <Button fx:id="btnHorse" layoutX="410.0" layoutY="110.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Horse ($100)" />
                <Button fx:id="btnArmor" layoutX="280.0" layoutY="15.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Armor ($30)" />
                <Button fx:id="btnCloth" layoutX="410.0" layoutY="15.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Cloth ($25)" />
                <Button fx:id="btnMap" layoutX="521.0" layoutY="15.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Map ($50)" />
            <Button fx:id="btnBoost" layoutX="521.0" layoutY="110.0" mnemonicParsing="false" onAction="#handPurchaseItem" prefHeight="75.0" prefWidth="100.0" text="Boost ($25)" />
            </children>
        </AnchorPane>
      <StackPane fx:id="leftUI" prefHeight="400.0" prefWidth="100.0">
              <children>

              </children>
      </StackPane>
      <BorderPane fx:id="bottomUI" layoutY="399.0" prefHeight="100.0" prefWidth="750.0" style="-fx-border-color: black;">
         <center>
            <Label fx:id="lblPurchaseStatus" prefHeight="42.0" prefWidth="373.0" text="Click buttons above to purchase items" textFill="#071180" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font>
            </Label>
         </center>
         <right>
                <Button mnemonicParsing="false" onAction="#handleButtonReturntoTavern" prefHeight="75.0" prefWidth="123.0" text="Back to Tavern" translateX="-10.0" BorderPane.alignment="CENTER" />
         </right></BorderPane>

    </children>
</AnchorPane>
